@model CRUD1._7.Models.ModeloVirtual

@{
    ViewBag.Title = "Tramos";
}
<div class="container body-content">
    @using (Ajax.BeginForm("Index", "TYPE_TRAMO", new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "divresultado" }))
    {
        <h2>Tramos</h2>

        <p>
            @Html.ActionLink("Crear nuevo tramo", "Create", null, new { @class = "btn btn-success" })
        </p>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Tramos.FirstOrDefault().idenTramo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Tramos.FirstOrDefault().idTramo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Tramos.FirstOrDefault().idTramo)
                </th>
            </tr>

            @foreach (var item in Model.Tramos)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.idenTramo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.idTramo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.nomTramo)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.idenTramo }, new { @class = "btn btn-info" }) |
                        @Html.ActionLink("Detalles", "Details", new { id = item.idenTramo }, new { @class = "btn btn-info" }) |
                        @Html.ActionLink("Eliminar", "Delete", new { id = item.idenTramo }, new { @class = "btn btn-danger" }) |
                        @Html.ActionLink("Ver Plaza", "VerPlaza", new { id = item.idenTramo }, new { @class = "btn btn-warning" })
                    </td>
                </tr>
            }

        </table>
        <div id="divResultado">
            @Html.Partial("VerPlaza", Model)
        </div>
    }
    </div>

