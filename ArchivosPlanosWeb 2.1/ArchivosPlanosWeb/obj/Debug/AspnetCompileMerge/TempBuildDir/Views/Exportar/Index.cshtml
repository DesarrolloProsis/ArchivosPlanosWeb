@model ArchivosPlanosWeb.Models.ControlesExportar
@{
    ViewBag.Title = "Index";
}

@section Scripts {
    <script>

        $(document).ready(function () {
            LoadDelegaciones();
            LoadPlazas();
            LoadTurnos();
        });

        function LoadDelegaciones() {
            $.ajax({
                url: '@Url.Action("GetDelegaciones", "Exportar")',
                type: "GET",
                data: "{}",
                cache: false,
                success: function (data) {
                    $.each(data, function (i, row) {
                        var $option = $('<option>');
                        $option.val(row.Value);
                        $option.html(row.Text);
                        $('#DelegacionesId').append($option);
                    });
                },
                error: function (ex) {
                    alert("Error!!!" + ex);
                },
            });
        }

        function LoadPlazas() {
            $.ajax({
                url: '@Url.Action("GetPlazaCobro", "Exportar")',
                type: "GET",
                cache: false,
                success: function (data) {
                    $.each(data, function (i, row) {
                        var $option = $('<option>');
                        $option.val(row.Value);
                        $option.html(row.Text);
                        $('#PlazaCobroId').append($option);
                    });
                },
                error: function (ex) {
                    alert("Error!!!" + ex)
                },
            });
        }

        function LoadTurnos() {
            $.ajax({
                url: '@Url.Action("GetTurnos", "Exportar")',
                type: "GET",
                cache: false,
                success: function (data) {
                    $.each(data, function (i, row) {
                        var $option = $('<option>');
                        $option.val(row.Value);
                        $option.html(row.Text);
                        $('#TurnoId').append($option);
                    });
                },
                error: function (ex) {
                    alert("Error!!!" + ex)
                },
            });
        }
    </script>
}


<div id="preloader"></div>



